{
    "openai_api_key": "your_openai_api_key_here",
    "openai_model": "gpt-4o",
    "window_settings": {
        "width": 600,
        "height": 320,
        "opacity": 200,
        "x": 100,
        "y": 100
    },
    "audio_settings": {
        "sampling_rate": 16000,
        "chunk_size": 1024,
        "buffer_duration": 5,
        "whisper_model": "base"
    },
    "ui_settings": {
        "font_size": 16,
        "title_font_size": 20,
        "subtitle_font_size": 14,
        "max_visible_lines": 8
    },
    "keybindings": {
        "screenshot": "ctrl+h",
        "analyze": "ctrl+enter",
        "clear": "ctrl+g",
        "help": "ctrl+?",
        "exit": "alt+f4",
        "move_up": "ctrl+up",
        "move_down": "ctrl+down",
        "move_left": "ctrl+left",
        "move_right": "ctrl+right",
        "opacity_up": "ctrl+page_up",
        "opacity_down": "ctrl+page_down"
    }
}

